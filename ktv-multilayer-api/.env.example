# KTV EUDR Multilayer API - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# PARALLEL PROCESSING CONFIGURATION
# =============================================================================
ENABLE_PARALLEL_PROCESSING=true
MAX_PARALLEL_WORKERS=8

# =============================================================================
# EARTH ENGINE SERVICE ACCOUNTS
# =============================================================================
EE_SERVICE_ACCOUNT_PATH=authentication/
TOTAL_SERVICE_ACCOUNTS=16
DEFAULT_PARALLEL_ACCOUNTS=16
FALLBACK_TO_SINGLE_ACCOUNT=true

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG_MODE=false

# =============================================================================
# GOOGLE CLOUD CONFIGURATION
# =============================================================================
GOOGLE_CLOUD_PROJECT_ID=your-project-id-here

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
MOCK_EE_ON_FAILURE=true

# =============================================================================
# INSTRUCTIONS
# =============================================================================
# 1. Copy this file: cp .env.example .env
# 2. Edit .env with your actual values
# 3. Never commit .env to git (already in .gitignore)
# 4. Place your 16 service account files in authentication/ folder:
#    - authentication/eudr-0.json
#    - authentication/eudr-1.json
#    - ...
#    - authentication/eudr-15.json
